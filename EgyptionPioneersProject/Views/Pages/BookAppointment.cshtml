@model dynamic
@{
    ViewBag.Title = "Book Appointment";
    var doctors = ViewBag.Doctors as List<EgyptionPioneersProject.Models.Doctor>;
}

<h2>Book an Appointment</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="BookAppointment" method="post">
    <div class="form-group">
        <label for="doctorId">Select Doctor</label>
        <select class="form-control" name="doctorId" required>
            <option value="">-- Choose Doctor --</option>
            @foreach (var doc in doctors)
            {
                <option value="@doc.D_Id">@doc.D_Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="date">Select Date</label>
        <input type="date" class="form-control" name="date" required />
    </div>

    <div class="form-group">
        <label for="time">Select Time</label>
        <input type="time" class="form-control" name="time" required />
    </div>

    <button type="submit" class="btn btn-primary mt-2">Book Appointment</button>
</form>

@model List<EgyptionPioneersProject.Models.Product>

<h2>Place Order</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="PlaceOrder" method="post">
    @Html.AntiForgeryToken()

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card shadow">
                    <img src="@Url.Content(product.Pr_Image)" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Pr_Name</h5>
                        <p class="card-text">@product.Pr_Description</p>
                        <h6 class="font-weight-bold text-primary">$@product.Pr_Price</h6>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" name="selectedProducts" value="@product.Pr_Id" />
                            <label class="form-check-label">Select</label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success mt-3">Place Order</button>
</form>

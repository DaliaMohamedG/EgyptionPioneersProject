@model List<Order>

<h2>My Orders</h2>

@if (Model.Count == 0)
{
    <p>You have no orders yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total</th>
                <th>Products</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.O_Id</td>
                    <td>@order.O_Date.ToString("yyyy-MM-dd")</td>
                    <td>@order.O_Status</td>
                    <td>@order.O_Total_Amount EGP</td>
                   <td>
    @foreach (var op in order.OrderProducts)
    {
        <span class="badge bg-primary" style="margin:3px;">
            @op.Product.Pr_Name - @op.Product.Pr_Price EGP
        </span>
    }
</td>
                </tr>
            }
        </tbody>
    </table>
}

@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <h2 class="mb-3">Products List</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">Add New Product</a>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Image</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Pr_Name</td>
                    <td>@item.Pr_Price</td>
                    <td>@item.Pr_Stock</td>
                    <td>@item.Pr_Category</td>

                    <td>
                        <img src="@Url.Content("~/images/" + (item.Pr_Image ?? "default.png"))"
                             width="70" height="70" style="object-fit:cover" />
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Pr_Id" 
                           class="btn btn-info btn-sm">Details</a>

                        <a asp-action="Edit" asp-route-id="@item.Pr_Id" 
                           class="btn btn-warning btn-sm">Edit</a>

                        <!-- DELETE POST FORM -->
                        <form asp-action="Delete" asp-route-id="@item.Pr_Id"
                              method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


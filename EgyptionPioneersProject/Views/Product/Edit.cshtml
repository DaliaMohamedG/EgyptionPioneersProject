@model Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2>Edit Product</h2>
    <hr />

    <form method="post">

        <input type="hidden" asp-for="Pr_Id" />

        <div class="form-group">
            <label>Name</label>
            <input asp-for="Pr_Name" class="form-control" />
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea asp-for="Pr_Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label>Price</label>
            <input asp-for="Pr_Price" class="form-control" />
        </div>

        <div class="form-group">
            <label>Stock</label>
            <input asp-for="Pr_Stock" class="form-control" />
        </div>

        <div class="form-group">
            <label>Category</label>
            <input asp-for="Pr_Category" class="form-control" />
        </div>

        <div class="form-group">
            <label>Image Name</label>
            <input asp-for="Pr_Image" class="form-control" />
        </div>

        <button class="btn btn-primary mt-3">Save</button>
        <a href="/Product" class="btn btn-secondary mt-3">Back</a>
    </form>
</div>
